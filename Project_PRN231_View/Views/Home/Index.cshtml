<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FASTDO Todolist</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://kit.fontawesome.com/f7d2579838.js" crossorigin="anonymous"></script>
  </head>
  <style>
    body {
      background-color: #f8f9fa; /* Màu nền */
    }

    .container {
      border-radius: 10px; /* Bán kính bo tròn cho container */
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Hiệu ứng đổ bóng cho container */
    }

    h1,
    h2,
    h3,
    h4 {
      color: #333; /* Màu sắc cho tiêu đề */
    }

    .nav-tabs .nav-link.active {
      background-color: #007bff; /* Màu nền cho tab đang chọn */
      border-color: #007bff; /* Màu viền cho tab đang chọn */
    }

    .nav-tabs .nav-link:hover {
      background-color: #0056b3; /* Màu nền khi di chuột qua tab */
    }

    .table-striped tr:nth-child(odd) {
      background-color: #fff; /* Màu nền cho hàng lẻ trong bảng */
    }

    .table-striped tr:nth-child(even) {
      background-color: #f9f9fa; /* Màu nền cho hàng chẵn trong bảng */
    }

    .table th {
      background-color: #b2d7ff; /* Màu nền cho tiêu đề bảng */
      color: #656565; /* Màu sắc cho tiêu đề bảng */
    }

    .navbar {
      background-color: #f8f9fa;
      padding: 15px 0;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .navbar-brand {
      font-size: 24px;
      font-weight: bold;
      color: #333;
    }

    .navbar-toggler {
      border: none;
      background-color: transparent;
    }

    .navbar-toggler:hover {
      background-color: rgba(0, 0, 0, 0.1);
    }

    .navbar-toggler .navbar-toggler-icon {
      color: #333;
    }

    .navbar-collapse {
      flex-grow: 1;
    }

    .navbar-nav .nav-link {
      color: #333;
      font-size: 16px;
      font-weight: 500;
      padding: 10px 15px;
    }

    .navbar-nav .nav-link.active {
      background-color: #007bff;
      color: #fff;
    }

    .navbar-nav .nav-link:hover {
      background-color: #0056b3;
      color: #fff;
    }

    .form-control {
      border: 1px solid #ced4da;
      border-radius: 4px;
      padding: 10px;
    }

    .btn-outline-success {
      border-color: #28a745;
      color: #28a745;
      border-radius: 4px;
      padding: 10px 15px;
    }

    .btn-outline-success:hover {
      background-color: #28a745;
      color: #fff;
    }
    .datepicker-toggle {
      width: 80%;
      display: flex;
      align-items: center;
      margin-left: -10px;
    }
    .form-control {
      padding: 6px;
    }
  </style>
  <body>
    <div class="row">
      <div class="col-md-4 ms-auto mt-3">
        <div class="input-group date datepicker-toggle">
          <input type="text" class="form-control" id="datepicker" />
          <button
            class="btn btn-outline-secondary"
            type="button"
            onclick="DecreaseDate()"
          >
            <i class="fa-solid fa-arrow-left"></i>
          </button>
          <button
            class="btn btn-outline-secondary"
            type="button"
            onclick="IncreaseDate()"
          >
            <i class="fa-solid fa-arrow-right"></i>
          </button>
        </div>
      </div>
    </div>
    <div class="container mt-3">
      <div class="row">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Danh sách công việc</th>
              <th>Độ ưu tiên</th>
              <th>Bắt đầu</th>
              <th>Kết thúc</th>
              <th>Tình trạng</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Set ads fCheckin + BCQT cùng Nhất</td>
              <td>Quan trọng</td>
              <td>08:30</td>
              <td>09:30</td>
              <td>Doing</td>
            </tr>
            <tr>
              <td>Nghiên cứu ads đối thủ về OKRs và Hiệu suất công việc</td>
              <td>Bình thường</td>
              <td>08:30</td>
              <td>09:30</td>
              <td>Pending</td>
            </tr>
            <tr>
              <td>Họp với anh Thanh</td>
              <td>Rất quan trọng</td>
              <td>08:30</td>
              <td>09:30</td>
              <td>Done</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <script>
      $(document).ready(function () {
        var today = new Date();
        var formattedToday =
          (today.getDate() < 10 ? "0" : "") +
          today.getDate() +
          "/" +
          (today.getMonth() + 1 < 10 ? "0" : "") +
          (today.getMonth() + 1) +
          "/" +
          today.getFullYear();

        $("#datepicker")
          .datepicker({
            format: "DD - dd/mm/yyyy",
            todayHighlight: true,
            autoclose: true,
          })
          .datepicker("setDate", formattedToday);
      });

      function IncreaseDate() {
        var currentDate = $("#datepicker").datepicker("getDate");
        currentDate.setDate(currentDate.getDate() + 1);
        $("#datepicker").datepicker("setDate", currentDate);
      }

      function DecreaseDate() {
        var currentDate = $("#datepicker").datepicker("getDate");
        currentDate.setDate(currentDate.getDate() - 1);
        $("#datepicker").datepicker("setDate", currentDate);
      }
    </script>
  </body>
</html>
